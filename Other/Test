public static Ability MakeAbOGDrax (int counter)
    {
        switch (counter)
        {
            case 0: BasicAb blast= new BasicAb ("Cosmic Blast", "single", "enemy", 45); blast.special.add(new DamageCounterBroad ("false", "Obsession", 5);
            return blast;
            case 1: BasicAb blow= new BasicAb ("Finishing Blow", "single", "enemy", 40); blow.special.add(new DamageCounterRemove ("false", "Obsession", 40);
            return blow;
            case 2: return null;
            case 3: return null;            
            case 4: return null;
        }
        return null; 
    }
    //fix dcbroad to check immunity name not just effname
